            config MCUX_DEPENDENCY_COMPONENT_middleware.nxp_iot_agent.mqtt.network_backend.lwip_wifi
                bool "lwip_wifi"
                select MCUX_COMPONENT_middleware.nxp_iot_agent.lwip_wifi
        endchoice
    endif

