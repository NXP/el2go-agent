source "Kconfig.zephyr"

config EDGELOCK2GO_HOSTNAME
    string "EL2GO Hostname"
    help
        The hostname for agent to connect to the EdgeLock 2GO cloud service.

config IOT_AGENT_CLAIMCODE_INJECT_ENABLE
    bool "Claimcode enable flag"
    help
        Flag for enabling provisioning through claimcode.

config IOT_AGENT_MQTT_ENABLE
    bool "Claimcode enable flag"
    help
        Flag for enabling provisioning through claimcode.

config AWS_SERVICE_KEY_PAIR_ID
    hex "AWS Key Pair ID"
    default 0x0
    help
        AWS key pair ID for el2go_agent.

config AWS_SERVICE_DEVICE_CERT_ID
    hex "AWS Certificate"
    default 0x0
    help
        AWS certificate ID.

config AZURE_SERVICE_KEY_PAIR_ID
    hex "AZURE Key Pair ID"
    default 0x0
    help
        AZURE key pair ID for el2go_agent.

config AZURE_SERVICE_DEVICE_CERT_ID
    hex "AZURE Certificate"
    default 0x0
    help
        AZURE certificate ID.

config AP_SSID
    string "SSID"
    help
        The SSID the agent connects to.

config AP_PASSWORD
    string "WIFI Password"
    help
        The password for wifi with given SSID.
